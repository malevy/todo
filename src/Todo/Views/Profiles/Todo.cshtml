<?xml version="1.0"?>
<alps version="1.0">
    <doc format="text">the boring todo sample app</doc>

    <!-- data elements -->
    <descriptor id="todo" 
                type="semantic">
        <doc format="text">a task to be performed</doc>
    </descriptor>
    <descriptor id="collection" 
                type="samentic">
        <doc format="text">a collection of items</doc>
    </descriptor>
    <descriptor id="completedOn"
                type="semantic">
        <doc format="text">the date and time that the task was completed</doc>
    </descriptor>
    <descriptor id="description"
                type="semantic">
        <doc format="text">the description of the task</doc>
    </descriptor>
    <descriptor id="important"
                type="semantic">
        <doc format="text">flag indicating if the task is important</doc>
    </descriptor>
    <descriptor id="skip"
                type="semantic">
        <doc format="text">when retrieving a collection, the number of items to skip before populating the collection (optional)</doc>
    </descriptor>
    <descriptor id="take"
                type="semantic">
        <doc format="text">when retrieving a collection, the number of items to populate the collection with (optional)</doc>
    </descriptor>

    <!-- transitions -->
    <descriptor id="next-link"
                name="next"
                type="safe">
        <doc format="text">the next page of items</doc>
        <descriptor href="#skip"/>
        <descriptor href="#take" />
    </descriptor>
    <descriptor id="previous-link"
                name="previous"
                type="safe">
        <doc format="text">the previous page of items</doc>
        <descriptor href="#skip" />
        <descriptor href="#take" />
    </descriptor>
    <descriptor id="collection-link"
                name="collection"
                type="safe">
        <doc format="text">the previous page of items</doc>
        <descriptor href="#skip" />
        <descriptor href="#take" />
    </descriptor>
    <descriptor id="complete-link"
                name="complete"
                type="idempotent">
        <doc format="text">marks the containing todo as completed</doc>
    </descriptor>
    <descriptor id="delete-link"
                name="delete"
                type="idempotent">
        <doc format="text">removes the containing todo</doc>
    </descriptor>
    <descriptor id="create-link"
                name="create"
                type="unsafe"
                rt="todo">
        <doc format="text">create a new todo item</doc>
        <descriptor href="#description"/>
        <descriptor href="#important"/>
    </descriptor>
</alps>